<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Beskar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_a80</item>
        <item name="colorPrimaryVariant">@color/black_a60</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_a80</item>
        <item name="colorSecondaryVariant">@color/black_a60</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>
    <style name="ToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily" >@font/rabbid_highway</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="StepTextUnselectedAppearance">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="StepTextSelectedAppearance">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="StepTextNumber">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="BottomSheetTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BottomSheetBody">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="HomeStreakText">
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="HomeStreakNumberText">
        <item name="android:fontFamily">@font/roboto_black_italic</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="MainSwitchText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black_a60</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">.2</item>
    </style>
    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>
</resources>