<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_a80</item>
        <item name="colorPrimaryVariant">@color/black_a60</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_a80</item>
        <item name="colorSecondaryVariant">@color/black_a60</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_a80</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>
    <style name="ToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily" >@font/rabbid_highway</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="LockScreenTextAppearance">
        <item name="android:fontFamily" >@font/rabbid_highway</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="AppBackground">
        <item name="android:background">@color/grey_light_theme</item>
    </style>
    <style name="StepTextUnselectedAppearance">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="StepTextSelectedAppearance">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="StepTextNumber">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BottomSheetBackground">
        <item name="android:background">@color/grey_bottom_sheet_light</item>
    </style>
    <style name="BottomSheetTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="BottomSheetBody">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="BottomSheetInfoButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/black_a60</item>
    </style>
    <style name="BottomSheetNextButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="HomeStreakText">
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="HomeStreakNumberText">
        <item name="android:fontFamily">@font/roboto_black_italic</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="HomeUpdateText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black_a60</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MainSwitchText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black_a60</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">.2</item>
    </style>
    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="CardTitleText">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="CardValueText">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="AlertDialogSwitchText">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="SwitchCompatStyle" >
        <item name="thumbTint">@color/switch_color_light</item>
    </style>
</resources>